{
    "properties": {
        "displayName": "Require Network Security Group on Subnet - Comprehensive",
        "policyType": "Custom",
        "mode": "All",
        "description": "This policy ensures that all subnets have a Network Security Group assigned at the time of deployment. This policy works for both standalone subnet deployments and subnets created as part of virtual network deployments. Deployment will be blocked if no NSG is specified.",
        "metadata": {
            "category": "Network",
            "version": "1.0.0"
        },
        "version": "1.0.0",
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Enable or disable the execution of the policy. Use 'Deny' to block subnet creation without NSG, or 'Disabled' to turn off the policy."
                },
                "allowedValues": [
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Deny"
            },
            "excludedSubnets": {
                "type": "Array",
                "metadata": {
                    "displayName": "Excluded Subnet Names",
                    "description": "List of subnet names that are exempt from this policy (e.g., AzureFirewallSubnet, GatewaySubnet, AzureBastionSubnet)"
                },
                "defaultValue": [
                    "AzureFirewallSubnet",
                    "GatewaySubnet",
                    "AzureBastionSubnet",
                    "RouteServerSubnet",
                    "AzureFirewallManagementSubnet"
                ]
            }
        },
        "policyRule": {
            "if": {
                "anyOf": [
                    {
                        "allOf": [
                            {
                                "field": "type",
                                "equals": "Microsoft.Network/virtualNetworks/subnets"
                            },
                            {
                                "field": "name",
                                "notIn": "[parameters('excludedSubnets')]"
                            },
                            {
                                "anyOf": [
                                    {
                                        "field": "Microsoft.Network/virtualNetworks/subnets/networkSecurityGroup.id",
                                        "exists": "false"
                                    },
                                    {
                                        "field": "Microsoft.Network/virtualNetworks/subnets/networkSecurityGroup.id",
                                        "equals": ""
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "allOf": [
                            {
                                "field": "type",
                                "equals": "Microsoft.Network/virtualNetworks"
                            },
                            {
                                "count": {
                                    "field": "Microsoft.Network/virtualNetworks/subnets[*]",
                                    "where": {
                                        "allOf": [
                                            {
                                                "field": "Microsoft.Network/virtualNetworks/subnets[*].name",
                                                "notIn": "[parameters('excludedSubnets')]"
                                            },
                                            {
                                                "anyOf": [
                                                    {
                                                        "field": "Microsoft.Network/virtualNetworks/subnets[*].networkSecurityGroup.id",
                                                        "exists": "false"
                                                    },
                                                    {
                                                        "field": "Microsoft.Network/virtualNetworks/subnets[*].networkSecurityGroup.id",
                                                        "equals": ""
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                },
                                "greater": 0
                            }
                        ]
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        },
        "versions": [
            "1.0.0"
        ]
    }
}
