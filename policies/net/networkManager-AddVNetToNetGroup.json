{
    "properties": {
        "displayName": "Add Virutal Network to Network Manager Network Group by Tag",
        "policyType": "Custom",
        "mode": "Microsoft.Network.Data",
        "description": "This policy adds a Virtual Network assigned a specific Tag and Value pair to a Network Manager Network Group.",
        "metadata": {
            "category": "Network"
        },
        "version": "1.0.0",
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Enable or disable the execution of the policy"
                },
                "allowedValues": [
                    "Enabled",
                    "Disabled"
                ],
                "defaultValue": "Enabled"
            },
            "networkGroupId": {
                "type": "string",
                "metadata": {
                    "displayName": "Network Group Resource Id",
                    "description": "The Network Group Resource Id to add the Virutal Network too.",
                    "assignPermissions": true
                }
            },
            "resourceLocationList": {
                "type": "Array",
                "metadata": {
                    "displayName": "Resource Location List",
                    "description": "Resource Location List to add Virtual Networks to Network Group. A single entry \"*\" selects all locations (default)."
                },
                "defaultValue": [
                    "*"
                ]
            },
            "tagName": {
                "type": "String",
                "metadata": {
                    "displayName": "Tag Name",
                    "description": "The name of the tag to be used to identify the Virtual Network."
                }
            },
            "tagValue": {
                "type": "String",
                "metadata": {
                    "displayName": "Tag Value",
                    "description": "The value of the tag to be used to identify the Virtual Network, specify \"*\" to represent any value."
                },
                "defaultValue": "*"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "[parameters('effect')]",
                        "equals": "Enabled"
                    },
                    {
                        "field": "type",
                        "equals": "Microsoft.Network/virtualNetworks"
                    },
                    {
                        "anyOf": [
                            {
                                "value": "[first(parameters('resourceLocationList'))]",
                                "equals": "*"
                            },
                            {
                                "field": "location",
                                "in": "[parameters('resourceLocationList')]"
                            }
                        ]
                    },
                    {
                        "anyOf": [
                            {
                                "allOf": [
                                    {
                                        "field": "[concat('tags[', parameters('tagName'), ']')]",
                                        "exists": "true"
                                    },
                                    {
                                        "field": "[parameters('tagValue')]",
                                        "exists": "*"
                                    }
                                ]
                            },
                            {
                                "field": "[concat('tags[', parameters('tagName'), ']')]",
                                "equals": "[paramters('tagValue')]"
                            }
                        ]
                    }
                ]
            },
            "then": {
                "effect": "addToNetworkGroup",
                "details": {
                    "networkGroupId": "[parameters('networkGroupId')]"
                },
                "roleDefinitionIds": [
                    "Network Contributor"
                ]
            }
        },
        "versions": [
            "1.0.0"
        ]
    }
}
